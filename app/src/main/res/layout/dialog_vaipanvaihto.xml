<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Vaipanvaihto tiedot"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radiogroundVaippa"
        android:layout_width="match_parent"
        android:layout_height="215dp">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pissavaippa" />

        <Button
            android:id="@+id/button32"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/diaper_pee_show" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kakkavaippa" />

        <Button
            android:id="@+id/button33"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:background="@drawable/diaper_poo_show" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="molemmat" />
    </RadioGroup>

    <EditText
        android:id="@+id/ed_vaippalaji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Vaipanlaji (kpl tai tiedot)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ed_notevaippa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Note"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_poistuVaippa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="POISTU"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_lisaaVaippa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_light"
            android:text="LISÄÄ"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>